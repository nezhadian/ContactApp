<Page
    x:Class="ContactApp.Pages.EditContactItemPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ContactApp.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EditContactItemPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{Binding TargetContact}"
    mc:Ignorable="d">

    <Grid>
        <TextBox VerticalAlignment="Center" Text="{Binding FirstName, Mode=TwoWay}" />
    </Grid>
</Page>
